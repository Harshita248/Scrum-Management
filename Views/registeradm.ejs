<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link href="/ScrollBar.css" rel="stylesheet" type="text/css" />
  <link href="/common.css" rel="stylesheet" type="text/css" />
  <link href="/register.css" rel="stylesheet" type="text/css" />
  <link href="/footer.css" rel="stylesheet" type="text/css" />
  <!-- Font-Awesome cdn -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />

  <title>Register as Admin</title>
</head>

<body>
  <div class="container">
    <%- include('./common') %>

      <div class="forms-container">
        <div class="signin-signup">
          <form action="#" class="sign-in-form">
            <h2 class="title">Admin Registration</h2>
            <div class="input-field">
              <i class="fa fa-user"></i>
              <input type="text" placeholder="Full Name" />
            </div>
            <div class="input-field">
              <i class="fa fa-building"></i>
              <input type="text" placeholder="Organization" />
            </div>
            <div class="input-field">
              <i class="fa fa-envelope"></i>
              <input type="text" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fa fa-mobile-alt"></i>
              <input type="number" placeholder="Mobile No." />
            </div>
            <div class="input-field">
              <i class="fa fa-lock"></i>
              <input type="password" placeholder="Password" />
            </div>
            <div class="input-field">
              <i class="fab fa-github"></i>
              <input type="text" placeholder="Github" />
            </div>
            <div class="input-field">
              <i class="fab fa-linkedin"></i>
              <input type="text" placeholder="LinkedIn" />
            </div>
            <input type="submit" value="Sign Up" class="btn solid" />
            <p class="social-text">Or Sign in with social platforms</p>
            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </form>

          <!-- Student Registration -->
          <form action="#" class="sign-up-form">
            <h2 class="title">Student Registration</h2>
            <div class="input-field">
              <i class="fa fa-user align-item-center"></i>
              <input type="text" placeholder="Full Name" />
            </div>
            <div class="input-field">
              <i class="fa fa-building justify-content-center"></i>
              <input type="text" placeholder="University" />
            </div>
            <div class="input-field">
              <i class="fa fa-warehouse justify-content-center"></i>
              <input type="text" placeholder="Branch" />
            </div>
            <div class="input-field">
              <i class="fa fa-envelope justify-content-center"></i>
              <input type="text" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fa fa-mobile-alt justify-content-center"></i>
              <input type="number" placeholder="Mobile No." />
            </div>
            <div class="input-field">
              <i class="fa fa-lock"></i>
              <input type="password" placeholder="Password" />
            </div>
            <div class="input-field">
              <i class="fab fa-github justify-content-center"></i>
              <input type="text" placeholder="Github" />
            </div>
            <div class="input-field">
              <i class="fab fa-linkedin justify-content-center"></i>
              <input type="text" placeholder="LinkedIn" />
            </div>
            <input type="submit" class="btn" value="Sign up" />
            <p class="social-text">Or Sign up with social platforms</p>
            <div class="social-media">
              <a href="#" class="social-icon">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
              <a href="#" class="social-icon">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>Are you a Student ?</h3>
            <p>
              Join us from this link and get access to all the features given by this organization
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
            <img src="/Rocket.svg" class="image" alt="" />
          </div>
        </div>


        <div class="panel right-panel">
          <div class="content">
            <h3>Are you from Adminstration ?</h3>
            <p>
              Join us from this link and be a part of this growing organization
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
            <img src="/Winter_Office.svg" class="image" alt="" />
          </div>
        </div>

      </div>
  </div>
  </div>
</body>

<script>
  const sign_in_btn = document.querySelector("#sign-in-btn");
  const sign_up_btn = document.querySelector("#sign-up-btn");
  const container = document.querySelector(".container");

  sign_up_btn.addEventListener("click", () => {
    container.classList.add("sign-up-mode");
  });

  sign_in_btn.addEventListener("click", () => {
    container.classList.remove("sign-up-mode");
  });
</script>

<%- include('footer')%>